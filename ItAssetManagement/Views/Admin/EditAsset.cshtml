@model ItAssetManagement.Models.Asset
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EditAsset";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 text-start">
        <h4 class="display-6">Edit Asset</h4>
    </div>
    <div class="col-md-6 text-end">
        <a class="btn btn-primary" asp-action="Index">Back To List</a>
    </div>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @{
            if (ViewBag.Msg != null)
            {
                <div class="alert alert-success" role="alert">@ViewBag.Msg</div>
            }
        }
        <form asp-action="EditAsset" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchasedDate" class="control-label"></label>
                <input asp-for="PurchasedDate" class="form-control" type="date" required/>
                <span asp-validation-for="PurchasedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNo" class="control-label"></label>
                <input asp-for="SerialNo" class="form-control" />
                <span asp-validation-for="SerialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetType" class="control-label"></label>
                <select asp-for="AssetType" class="form-select" required>
                    <option value="0">PC</option>
                    <option value="1">LAPTOP</option>
                    <option value="2">MONITOR</option>
                    <option value="3">MOUSE</option>
                    <option value="4">PEN_DRIVE</option>
                    <option value="5">EXTERNAL_HDD</option>
                    <option value="6">WEB_CAMERA</option>
                    <option value="7">HEADPHONES</option>
                    <option value="8">MOBILE_PHONE</option>
                </select>
                <span asp-validation-for="AssetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnteredBy" class="control-label"></label>
                <input asp-for="EnteredBy" class="form-control" />
                <span asp-validation-for="EnteredBy" class="text-danger"></span>
            </div>
            <div class="form-group mb-5 mt-2 text-center">
                <input type="submit" value="Save" class="btn btn-primary w-50" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
