@model ItAssetManagement.Models.Asset
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AddAsset";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h4 class="text-start display-6">Add Asset</h4>
    </div>
    <div class="col-md-6">
        <div class="text-end">
            <a asp-action="Index" class="btn btn-primary">Back To List</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @{
            if (ViewBag.Msg != null)
            {
                <div class="alert alert-success" role="alert">@ViewBag.Msg</div>
            }
        }
        <form asp-action="AddAsset" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchasedDate" class="control-label"></label>
                <input asp-for="PurchasedDate" type="date" class="form-control" required />
                <span asp-validation-for="PurchasedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetType" class="control-label"></label>
                <select asp-for="AssetType" class="form-select" required>
                    <option value="0">PC</option>
                    <option value="1">LAPTOP</option>
                    <option value="2">MONITOR</option>
                    <option value="3">MOUSE</option>
                    <option value="4">PEN_DRIVE</option>
                    <option value="5">EXTERNAL_HDD</option>
                    <option value="6">WEB_CAMERA</option>
                    <option value="7">HEADPHONES</option>
                    <option value="8">MOBILE_PHONE</option>
                </select>
                <span asp-validation-for="AssetType" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-5 text-center">
                <input type="submit" value="Add" class="btn btn-primary w-50" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

