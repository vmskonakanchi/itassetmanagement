@model IEnumerable<ItAssetManagement.Models.AssetRequest>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AssetRequests";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<h1 class="text-center display-5">AssetRequests</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
                @{
                    switch (item.Type)
                    {
                        case "0":
                                                    <td>PC</td>
                            break;
                        case "1":
                                                    <td>LAPTOP</td>
                            break;
                        case "2":
                                                    <td>MONITOR</td>
                            break;
                        case "3":
                                                    <td>MOUSE</td>
                            break;
                        case "4":
                                                    <td>PEN DRIVE</td>
                            break;
                        case "5":
                                                    <td>EXTERNAL HDD</td>
                            break;
                        case "6":
                                                    <td>WEB CAMERA</td>
                            break;
                        case "7":
                                                    <td>HEADPHONES</td>
                            break;
                        case "8":
                                                    <td>MOBILE PHONES</td>
                            break;
                        default:
                                                    <td></td>
                            break;
                    }
                }
            <td>
                @Html.DisplayFor(modelItem => item.AssetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="ViewAsset" asp-route-id="@item.AssetId" asp-controller="Admin" class="btn btn-info">View</a> |
                <a asp-action="Approve" asp-route-id="@item.Id" asp-route-isApproved="@true" asp-controller="Admin" class="btn btn-success">Approve</a> |
                <a asp-action="Approve" asp-route-id="@item.Id" asp-route-isApproved="@false" asp-controller="Admin" class="btn btn-danger">Reject</a> 
            </td>
        </tr>
}
    </tbody>
</table>
