@model IEnumerable<ItAssetManagement.Models.AssetRequest>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = "~/Views/Layout/_Layout.cshtml";
}

@{
	if (Model.Count() > 0)
	{

		<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>
						@Html.DisplayNameFor(model => model.Id)
							</th>
							<th>
						@Html.DisplayNameFor(model => model.AssetName)
							</th>
							<th>
						@Html.DisplayNameFor(model => model.UserName)
							</th>
							<th>
						@Html.DisplayNameFor(model => model.FromDate)
							</th>

							<th>
						@Html.DisplayNameFor(model => model.ToDate)
							</th>

							 <th>
						@Html.DisplayNameFor(model => model.Type)
							</th>

							 <th>
						@Html.DisplayNameFor(model => model.Status)
							</th>
						</tr>
					</thead>
					<tbody>
				@foreach (var item in Model)
				{
								<tr>
									<td>
							@Html.DisplayFor(modelItem => item.Id)
									</td>
									<td>
							@Html.DisplayFor(modelItem => item.AssetName)
									</td>
									<td>
							@Html.DisplayFor(modelItem => item.UserName)
									</td>
									<td>
							@Html.DisplayFor(modelItem => item.FromDate)
									</td>

									<td>
							@Html.DisplayFor(modelItem => item.ToDate)
									</td>

						@{
							switch (item.Type)
							{
								case "0":
									<td>PC</td>
									break;
								case "1":
									<td>LAPTOP</td>
									break;
								case "2":
									<td>MONITOR</td>
									break;
								case "3":
									<td>MOUSE</td>
									break;
								case "4":
									<td>PEN DRIVE</td>
									break;
								case "5":
									<td>EXTERNAL HDD</td>
									break;
								case "6":
									<td>WEB CAMERA</td>
									break;
								case "7":
									<td>HEADPHONES</td>
									break;
								case "8":
									<td>MOBILE PHONES</td>
									break;
								default:
									<td></td>
									break;
							}
						}

									 <td>
							@{
								if (item.Status == "Approved")
								{
																			<a class="text-success disabled" style="text-decoration:none">@item.Status</a>
								}
								else if (item.Status == "Rejected")
								{
																		<a class="text-danger disabled" style="text-decoration:none">@item.Status</a>
								}
								else
								{
															<a class="text-warning disabled " style="text-decoration:none">@item.Status</a>
								}
							}
									</td>
								</tr>
				}
					</tbody>
		</table>
	}
	else
	{
		<div class="row">
					<div class="col-md-12 text-center">
						<div class="display-3">There are no assets owned by you , request some</div>
					</div>
		</div>
	}
}